{
    "name": "elephox/templar",
    "description": "A declarative templating engine for PHP.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ricardo Boss",
            "email": "contact@ricardoboss.de"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "pestphp/pest": "^1.21"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Elephox\\Templar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elephox\\Templar\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
